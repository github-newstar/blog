---
import Layout from '../layouts/Layout.astro';
const allPosts = Object.values(import.meta.glob('./posts/*.md', {eager: true}));
console.log(allPosts);

---

<Layout>
    <ul class="max-w-[50rem]">
        
        {allPosts.map( (post: any)=> 
            <li class=>
                <a href={post.url} class="mx-5 px-2 gap-2 rounded-2xl hover:bg-gray-200 transition duration-150 flex" >

                <img class="w-40 m-4 rounded-md" src={post.frontmatter.image.url} alt="example_1">
                <div class="flex flex-col flex-1 gap-1 items-start justify-center">
                <h2 class="text-2xl font-semibold">{post.frontmatter.title}</h2>
                <p  class="text-sm text-gray-500">
                    {post.frontmatter.description}
                </p>
                </div>
                </a>
                <a href={post.frontmatter.tags[0]} class="flex gap-">
                    {post.frontmatter.tags[0]}
                </a>
            </li>
         )}

    
    </ul>

</Layout>

